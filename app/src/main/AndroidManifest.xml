<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.rahadi.sipadu">
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"/>


    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_logo"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".UserInterface.SplashScreen"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".UserInterface.HomeActivity"
            android:label="@string/title_activity_home"
            android:theme="@style/AppTheme.NoActionBar.ForHome" />
        <activity
            android:name=".UserInterface.LoginActivityNim"
            android:theme="@style/AppTheme.NoActionBar"/>
        <activity android:name=".UserInterface.LoginActivityPassword"
            android:theme="@style/AppTheme.NoActionBar"/>
        <activity
            android:name=".UserInterface.BeritaActivity"
            android:label="@string/title_activity_berita"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".UserInterface.BeritaDetailActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".UserInterface.NilaiActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".UserInterface.AbsensiActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name=".UserInterface.JadwalActivity"
            android:theme="@style/AppTheme.NoActionBar"/>

    </application>

</manifest>
